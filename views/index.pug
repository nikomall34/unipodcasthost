html(lang="de")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title LeCast - Lecture Podcast
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
    link(rel="stylesheet" href="style.css")
  
  body
    div(class="container")
        br
        h1(style="text-align: center;") Online Video to Audio Converter
        - const urlA = "/addItem?id=" + id
        form(action=urlA method="post" enctype="multipart/form-data")
            div(class="form-group")
                input(type="file" name="file" required)
            div(class="form-group")
                label(for="Title") Title:
                input(type="text" id="Title" name="Title")
            div(class="form-group")
                button(class="btn btn-danger btn-block") AddItem
        br
        - const urlR = "/removePlaylist?id=" + id
        form(action=urlR method="post")
            div(class="form-group")
                button(class="btn btn-danger btn-block") RemovePlaylist
        br
        - const urlC = "/create?id=" + id
        form(action=urlC method="post" enctype="multipart/form-data")
            div(class="form-group")
                button(class="btn btn-danger btn-block") CreatePlaylist
        br
        - const urlRI = "/removeItem?id=" + id
        form(action=urlRI method="post")
            div(class="form-group")
                label(for="Title") Item:
                input(type="text" id="Title" name="Title" required)
            div(class="form-group")
                button(class="btn btn-danger btn-block") DeleteItem
        br
        - // RSS-Feed nur anzeigen wenn playlist erstellt wurde
        a(href=rsspath) hier gehts zum RSS-Feed
